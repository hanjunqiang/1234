#import "UIView+ZJExtension.h"

@implementation UIView (ZJExtension)
- (void)setZj_x:(CGFloat)zj_x
{
    CGRect frame = self.frame;
    frame.origin.x = zj_x;
    self.frame = frame;
}


- (CGFloat)zj_x
{
    return self.frame.origin.x;
}

- (void)setZj_y:(CGFloat)zj_y
{
    CGRect frame = self.frame;
    frame.origin.y = zj_y;
    self.frame = frame;
}

- (CGFloat)zj_y
{
    return self.frame.origin.y;
}

- (void)setZj_w:(CGFloat)zj_w
{
    CGRect frame = self.frame;
    frame.size.width = zj_w;
    self.frame = frame;
}

- (CGFloat)zj_w
{
    return self.frame.size.width;
}

- (void)setZj_h:(CGFloat)zj_h
{
    CGRect frame = self.frame;
    frame.size.height = zj_h;
    self.frame = frame;
}

- (CGFloat)zj_h
{
    return self.frame.size.height;
}

- (void)setZj_size:(CGSize)zj_size
{
    CGRect frame = self.frame;
    frame.size = zj_size;
    self.frame = frame;
}

- (CGSize)zj_size
{
    return self.frame.size;
}

- (void)setZj_origin:(CGPoint)zj_origin
{
    CGRect frame = self.frame;
    frame.origin = zj_origin;
    self.frame = frame;
}

- (CGPoint)zj_origin
{
    return self.frame.origin;
}
@end
